<!DOCTYPE html>
<html>
	<head>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.min.js"></script>
		<title>Chart</title>

		<meta property="og:url" content="http://[[= model.url ]]" />
		<meta property="og:title" content="Hasvi - [[= model.title ]]" />
		<meta property="og:description" content="IOT storage and visualisation" />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Hasvi" />
		<meta property="og:image" content="http://[[= model.thumburl ]]" />
		<meta property="og:image:width" content="200" />
		<meta property="og:image:height" content="200" />
		<meta property="og:image:type" content="image/png" />
	</head>

	<body>
		<div style="width: 600px;">
			<canvas id="myChart" width="600" height="500"></canvas>
		</div>

		<script>
			var ctx = document.getElementById("myChart");
			var myChart = new Chart(ctx, {
				type: 'line',
				data: {
					datasets: [ [[= model.datasets ]] ]
				},
				options: {
				    animation: {
						duration: 0,
					},				
					legend: {
						display: true
					},
					scales: {
						yAxes: [{
							id: 'L',
							position: 'left',
							display: [[= model.showL ]],
							ticks: {
								maxTicksLimit: 9,
							},
							scaleLabel: {
								display: [[= model.isLyName ]],
								labelString: '[[= model.LyName ]]'
							}
						}, {
							id: 'R',
							position: 'right',
							display: [[= model.showR ]],
							ticks: {
								maxTicksLimit: 9,
							},
							scaleLabel: {
								display: [[= model.isRyName ]],
								labelString: '[[= model.RyName ]]'
							}
						}],
						xAxes: [{
							type: 'time',
							time: {
								autoSkip: false,
							},
							ticks: {
								padding: 10,
								maxRotation: 90,
								minRotation: 90,
								maxTicksLimit: 15,
								autoSkip: true,
							},
							scaleLabel: {
								display: true,
								labelString: 'Time ([[= model.tz ]])'
							}
						}]
					}
				}
			});
		</script>
	</body>
</html>